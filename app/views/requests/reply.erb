<div class="container text-center">
  <% if current_user %>

    <div class="row">
      <div class="col-sm-4 col-md-4 col-lg-4"></div>
      <div class="col-sm-4 col-md-4 col-lg-4 box">
        <table id="received-request">
          <tr>
            <th class="text-right">Accommodation &nbsp</th>
            <td><%= @current_request.accommodation.name %></td>
          </tr>
          <tr>
            <th class="text-right">Check-in &nbsp</th>
            <td><%= @current_request.check_in.strftime("%d/%m/%Y") %></td>
          </tr>
          <tr>
            <th class="text-right">Check-out &nbsp</th>
            <td><%= @current_request.check_out.strftime("%d/%m/%Y") %></td>
          </tr>
          <tr>
            <th class="text-right">Requested By &nbsp</th>
            <td><%= @current_request.user.name %></td>
          </tr>
          <tr>
            <td>&nbsp</td>
          </tr>
        </table>
      </div>
      <div class="col-sm-4 col-md-4 col-lg-4"></div>
    </div>


    <div class="row">
      <div class="col-sm-4 col-md-4 col-lg-4"></div>

      <div class="col-sm-1 col-md-1 col-lg-1">
        <form id="accept-request" action="/requests/<%= @current_request.id %>" method="post">
          <input type="hidden" name="_method" value="put">
          <input type="hidden" name="check_in" value="<%= @current_request.check_in %>">
          <input type="hidden" name="check_out" value="<%= @current_request.check_out %>">
          <input type="hidden" name="accommodation_id" value="<%= @current_request.accommodation_id %>">
          <input type="hidden" name="confirmed" value="true">
          <input type="submit" name="accept" class="btn btn-default bt-md" value="Accept"><i class="fa fa-check fa-3x" aria-hidden="true"></i>
        </form>
      </div>

      <div class="col-sm-2 col-md-2 col-lg-2"></div>

      <div class="col-sm-1 col-md-1 col-lg-1">
        <form id="reject-request" action="/requests/<%= @current_request.id %>" method="post">
          <input type="hidden" name="_method" value="put">
          <input type="hidden" name="confirmed" value="false">
          <input type="submit" name="reject" class="btn btn-default bt-md" value="Reject"><i class="fa fa-times fa-3x" aria-hidden="true"></i>
        </form>
      </div>

      <div class="col-sm-4 col-md-4 col-lg-4"></div>
    </div>
  <% else %>
    <p>Please log in</p>
  <% end %>
</div>
