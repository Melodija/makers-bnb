<div class="container">
<div class="row">
  <div class="col-sm-3 col-md-3">

  </div>

  <div class="col-sm-6 col-md-6">
<p class="title-font3 shadow--light txt-center">Accommodations</p>
<% if current_user %>
  <p><a href="/accommodations/new" style="text-decoration: none">Create a new listing</a></p>
<% end %>
<p class="norm-txt">
<b>Listings</b> <span class="pull-right">£ per night</span>
</p>
<ul class="list-group" id='accommodations'>
  <% @accommodations.each do |accommodation| %>
    <li class="list-group-item">
      <a style="text-decoration: none" href="/accommodations/<%= accommodation.id %>"><%= accommodation.name %></a> <span style="float: right"> £<%= accommodation.price %> </span>
    </li>
  <% end %>
</ul>

</div>

<div class="col-sm-3 col-md-3">

</div>
</div>
</div>
