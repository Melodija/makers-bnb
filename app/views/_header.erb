<nav class="navbar navbar-dark bg-inverse navbar-full">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">
        <img alt="Brand" src="/images/makers_logo.png" height="100" width="100">
      </a>
    </div>
    <% if current_user %>
      <h3>Welcome, <%= current_user.name %>!</h3>
      <button class="btn btn-danger pull-xs-right"><a style="color: white" href="/requests">Requests</a></button>
      <form id="logout" action="/sessions" method="post">
        <input type="hidden" name="_method" value="delete" />
        <input type="submit" class="btn btn-danger pull-xs-right" value="Log Out" />
      </form>
    <% else %>
      <form id="login" action="/sessions" style="float: left" method="post">
        <input class="form-control-sm" type="email" name="email" placeholder="Email" required />
        <input class="form-control-sm" type="password" name="password" placeholder="Password" required />
        <input type="submit" class="btn btn-danger" value="Log In">
      </form>
      
      <button class="btn btn-danger pull-xs-right" style="float: right"><a style="color: white" href="/users/new">Sign Up</a></button>
    <% end %>
  </div>
</nav>
